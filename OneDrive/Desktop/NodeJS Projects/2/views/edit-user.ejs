<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profile</title>
  <link rel="stylesheet" href="/css/update-user.css">
</head>
<body>
  <div class="container">
    <h1>Edit Profile</h1>
    <form action="/profile/update-user" method="POST" class="profile-form" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="<%= name %>" 
          required
        >
      </div>  
      <div class="form-group">
        <label for="email">Email</label>
        <input 
          type="email" 
          id="email"
          name="email" 
          value="<%= email %>" 
          readonly
        >
      </div>
      <div class="form-group">
        <label for="avatar">Profile Avatar</label>
        <% if (avatarUrl) { %>
          <div class="current-avatar">
            <img src="<%= avatarUrl %>" alt="Current Avatar" width="100" height="100" style="border-radius:50%;">
          </div>
        <% } %>
        <input 
          type="file" 
          id="avatar" 
          name="avatar" 
          accept="image/png, image/jpeg"
        >
      </div>
      <% if(errors && errors.length > 0){ %>
        <% errors.forEach((error)=>{ %>
          <p class="flash-error"><%= error %></p>
        <% }) %>
      <% } %>
      <div class="form-actions">
        <button type="submit">Save Changes</button>
      </div>
    </form>
  </div>
</body>
</html>
